<!DOCTYPE html>
<hmtl>
  <head>
    <title>ONTHEBENCH</title>

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./css/bootstrap.min.css"/>
    <link rel="stylesheet" href="./css/style.css"/>
  </head>
  <body>

    <%- include partials/nav.ejs %>

    <container>
      <form method="post" action="/profile" class="form form-profile">
        <h2 class="from-heading form-profile-heading">
          Edit profile
        </h2>
        <% if (message) { %>
          <p class="error"><%= message.text %></p>
        <% } %>

        <!-- first name -->
        <label for="inputFirstName" class="sr-only">First name</label>
        <input type="text" id="inputFirstName" name="firstName" class="form-control" value="<%- profile.firstName ? profile.firstName : '' %>" placeholder="First name" required autofocus />

        <!-- last name -->
        <label for="inputLastName" class="sr-only">Last name</label>
        <input type="text" id="inputLastName" name="lastName" class="form-control" value="<%- profile.lastName ? profile.lastName : '' %>" placeholder="Last name" required />

        <!-- position -->
        <label for="inputPosition" class="sr-only">Position</label>
        <select class="form-control" id="inputPosition" name="position" required>
          <option value="" selected="<%- !profile.position ? true : false %>" disabled>Position</option>
          <option value="bench" selected="<%- profile.position === 'bench' ? true : false %>">Bench heater</option>
          <option value="striker" selected="<%- profile.position === 'striker' ? true : false %>">Striker</option>
          <option value="midfielder" selected="<%- profile.position === 'midfielder' ? true : false %>">Midfielder</option>
          <option value="defender" selected="<%- profile.position === 'defender' ? true : false %>">Defender</option>
          <option value="keeper" selected="<%- profile.position === 'keeper' ? true : false %>">Keeper</option>
        </select>

        <!-- email -->
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" id="inputEmail" name="email" class="form-control" value="<%- profile.email ? profile.email : '' %>" placeholder="Email" required  />

        <!-- password -->
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" />

        <!-- password confirm -->
        <label for="inputPasswordConfirm" class="sr-only">Password Confirm</label>
        <input type="password" id="inputPasswordConfirm" name="passwordConfirmâ€“" class="form-control" placeholder="Password confirm" />

        <!-- submit -->
        <button class="btn btn-lg btn-primary btn-block" type="submit">Save profile</button>
        <hr />
      </form>
      <a href="/logout" class="btn btn-md btn-primary btn-block container-btn">Log out</a>
    </container>

    <script src="./js/jquery.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
  </body>
</hmtl>
